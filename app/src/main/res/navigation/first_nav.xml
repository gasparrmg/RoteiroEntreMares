<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.android.roteiroentremares.ui.onboarding.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.android.roteiroentremares.ui.onboarding.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_avencasViewPagerFragment"
            app:destination="@id/avencasViewPagerFragment" />
        <action
            android:id="@+id/action_viewPagerFragment_to_riaFormosaViewPagerFragment"
            app:destination="@id/riaFormosaViewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/avencasViewPagerFragment"
        android:name="com.android.roteiroentremares.ui.onboarding.AvencasViewPagerFragment"
        android:label="fragment_avencas_view_pager"
        tools:layout="@layout/fragment_avencas_view_pager" />
    <fragment
        android:id="@+id/riaFormosaViewPagerFragment"
        android:name="com.android.roteiroentremares.ui.onboarding.RiaFormosaViewPagerFragment"
        android:label="RiaFormosaViewPagerFragment" />
</navigation>