<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardview_especie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardForegroundColor="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/button_add_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_camera"
                    android:tint="@color/colorAccent"
                    android:background="@android:color/transparent"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/imageview_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_media_play"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagem da espÃ©cie"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/textView_nomecomum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:text="Nome comum"
                    android:textColor="@color/colorTitleText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_instancia1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:textSize="12sp"
                        android:text="Face exposta de blocos de pedra"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorTitleText"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:id="@+id/checkbox_instancias1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_instancia2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:textSize="12sp"
                        android:text="Face inferior de blocos de pedra"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorTitleText"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:id="@+id/checkbox_instancias2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_instancia3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/open_sans"
                        android:textSize="12sp"
                        android:text="Substrato"
                        android:gravity="center_vertical"
                        android:textColor="@color/colorTitleText"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:id="@+id/checkbox_instancias3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:minWidth="0dp"
                        android:minHeight="0dp"/>

                </LinearLayout>

            </LinearLayout>

            <!--<CheckBox
                android:id="@+id/checkbox_instancias"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>-->

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>