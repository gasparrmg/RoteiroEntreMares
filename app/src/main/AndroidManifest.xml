<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.roteiroentremares">
    
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".RoteiroEntreMaresApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.dashboard.screens.artefactos.NewArtefactoActivity"
            android:parentActivityName=".ui.dashboard.ArtefactosActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.dashboard.screens.artefactos.EditArtefactoActivity"
            android:parentActivityName=".ui.dashboard.ArtefactosActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".ui.dashboard.GuiaDeCampoActivity"
            android:parentActivityName=".ui.dashboard.UserDashboardActivity" />
        <activity
            android:name=".ui.dashboard.ArtefactosActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.dashboard.UserDashboardActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.dashboard.PessoalActivity"
            android:parentActivityName=".ui.dashboard.UserDashboardActivity" />
        <activity
            android:name=".ui.dashboard.UserDashboardActivity"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.onboarding.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>