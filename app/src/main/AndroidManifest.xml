<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.roteiroentremares">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="com.lasige.roteiroentremares.RoteiroEntreMaresApplication"
        android:allowBackup="false"
        tools:replace="android:allowBackup"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.AboutUsActivity"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.UserDashboardActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.WifiP2PActivity"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.UserDashboardActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.PoliticaPrivacidadeActivity"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.UserDashboardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.riaformosa.GlossarioRiaFormosaActivity" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.AvistamentosChartsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.AvistamentosListActivity"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.GuiaDeCampoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.riaformosa.AvistamentosRiaFormosaChartsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.riaformosa.AvistamentosRiaFormosaPocasTranseptosChartsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.AvistamentoPocasDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.AvistamentoZonacaoDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.AvistamentoRiaFormosaDunasDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.AvistamentoRiaFormosaPocasDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.AvistamentoRiaFormosaTranseptosDetails"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.common.ImageFullscreenFileActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.common.ImageFullscreenActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.EspecieFilterActivity"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.GuiaDeCampoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.guiadecampo.details.EspecieDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.common.MediaPlayerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.common.MediaPlayerResourceActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.artefactos.NewArtefactoActivity"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.ArtefactosActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.screens.artefactos.EditArtefactoActivity"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.ArtefactosActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.GuiaDeCampoActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.UserDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.ArtefactosActivity"
            android:launchMode="singleTop"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.UserDashboardActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.PessoalActivity"
            android:parentActivityName="com.lasige.roteiroentremares.ui.dashboard.UserDashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.dashboard.UserDashboardActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.lasige.roteiroentremares.ui.onboarding.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.roteiroentremares.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- Used for transferring files  after a successful connection -->
        <service android:enabled="true" android:name="com.lasige.roteiroentremares.services.WifiP2pClientService" />
        <service android:enabled="true" android:name="com.lasige.roteiroentremares.services.WifiP2pServerService" />
        <service android:enabled="true" android:name="com.lasige.roteiroentremares.services.WifiP2pGroupRegistrationServerService" />
        <service android:enabled="true" android:name="com.lasige.roteiroentremares.services.WifiP2pSyncAlunoService" />
        <service android:enabled="true" android:name="com.lasige.roteiroentremares.services.WifiP2pSyncProfessorService" />
    </application>

</manifest>